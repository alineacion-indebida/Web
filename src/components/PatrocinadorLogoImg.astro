---
import type { HTMLAttributes } from "astro/types"
import { Image } from "astro:assets"

import type { PatrocinadorId } from "@/consts/patrocinadores-logo-catalog"

interface Props extends HTMLAttributes<"img"> {
	/**
	 * Additional CSS class to be applied to the SVG element.
	 */
	class?: string

	/**
	 * The logo to display.
	 */
	logo: PatrocinadorId
}

const { logo = "patrocinador" } = Astro.props
---

<Image
	class="px-5 text-white transition group-hover:scale-110 group-focus:scale-110 md:px-4 py-2"
	src={`/img/patrocinadores/${logo}.webp`}
	alt="title"
	width={960}
	height={480}
	decoding="async"
	loading="lazy"
/>
