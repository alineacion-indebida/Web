---
import Typography from "./Typography.astro"

interface Links {
	url: string
	name: string
	space?: boolean
}
const LINKS: Links[] = [
	{
		url: "/news",
		name: "NOTICIAS",
	},
	{
		url: "/cronicas",
		name: "CRÓNICAS",
	},
	{
		url: "/",
		name: "HOME",
//		space: true,
	},
	{
		url: "/video",
		name: "VÍDEOS",
	},
	{
		url: "/quiensomos",
		name: "QUIÉN SOMOS",
	},
]
---

<nav>
	<ul class="flex items-center justify-center gap-x-7">
		{
			LINKS.map(({ url, name, space }) => (
				<li class="flex items-center">
					{space ? (
						<div class="w-40 px-8 py-4" />
					) : (
						<Typography
							class:list={"from-neutral-700 px-8 py-4 hover:bg-gradient-to-b"}
							color="white"
							variant="body"
							as="a"
							href={url}
						>
							{name}
						</Typography>
					)}
				</li>
			))
		}
	</ul>
